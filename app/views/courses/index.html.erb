                    <a href="#">Semester 8</a>
                    -->
                    <a href="#"> <%= link_to 'Semester 1', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 2', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 3', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 4', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 5', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 6', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 7', schedule_path %> </a>
                    <a href="#"> <%= link_to 'Semester 8', schedule_path %> </a>
                </div>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<h2> Schedule </h2>
<table class="table table-striped col-md-12" id="courses">
  <thead>
    <tr>
      <th>Semester</th>
      <th>Course</th>
      <th>Requirements Filled</th>
      <th>Taken</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @schedule.each do |course| %>
      <tr>
        <td>
          <%= course.semester %>
        </td>
        <td>
          <%= course.courseID %>
        </td>
        <td>
          <%= course.reqID %>
        </td>
        <td>
          <%= course.taken %>
        </td>
        <td>
            <%= link_to 'Remove Class', schedule_path, id: 'title_header' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
