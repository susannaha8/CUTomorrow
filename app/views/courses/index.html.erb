<h2> Course Requirements </h2>
<table class="table table-striped col-md-12" id="reqs">
  <thead>
    <tr>
      <th>Course</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.courseID %>
        </td>
        <td>
            <div class="dropdown">
                <button class="dropbtn">Add Class</button>
                <div class="dropdown-content">
                    <!--
                    <a href="#">Semester 1</a>
                    <a href="#">Semester 2</a>
