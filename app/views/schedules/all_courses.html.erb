<h1 class="page-title"> All Courses </h1>

<h2 class="profile-name"><em><%= @semester %></em></h2>
<table class="table table-striped col-md-12" id="courses">
    <tr id = "test" class="body-text">
      <th>Course</th>
      <th>Course Code</th>
      <th>Action</th>
    </tr>
    <% @courses.each do |course| %>
          <tr>
            <td class="course">
              <%= course.courseTitle %>
            </td>
	    <td class="course">
	    <%= course.prefixCode + " "+ course.courseCode %>
	  	</td>
            <td class="course">
              <%= button_to "add", { schedule: { uni: @uni, courseID: course.courseID, semester: params[:semester], reqID: nil, id: course.courseID }}, class: 'add-button' %>
            </td>
          </tr>
    <% end %>
</table>