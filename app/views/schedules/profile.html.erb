<h2> Profile </h2>

<ul id="profile">
  <li>
    Name:
    <%= @student.firstName @student.lastName%>
  </li>
  <li>
    Uni:
        <%= @student.uni %>
  </li>
  <li>
    Standing:
        <%= @student.Standing %>
  </li>
  <li>
    Major 1:
        <%= @student.major1 %> <!-- get the user's major, get the major name-->
  </li>
  <li>
    Major 2:
        <%= @student.major2 %> 
  </li>
  <li>
    Minor 1:
        <%= @student.minor1 %> 
  </li>
  <li>
    Minor 2:
        <%= @student.minor2 %> 
  </li>
  <li>
    Minor 3:
        <%= @student.minor3 %> 
  </li>

</ul>

<h3>Links:</h3>

<div class="row">
  <%= link_to 'Edit Profile', edit_prfile_path(@student), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Back to Schedules', schedule_path, :class => 'btn btn-primary col-2' %>
</div>
