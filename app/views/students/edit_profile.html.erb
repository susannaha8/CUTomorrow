<div style="text-align: center">
<%= form_for @student, url: edited_profile_path, method: :put do |f| %>
  <%= label :student, :standing, 'Standing: ', :class => 'col-form-label profile-name md-font-size' %>
  <select name='student[standing]' id="Standing">
    <% @categories.each do |category| %>
      <option value="<%= category[:name] %>"><%= category[:name] %></option>
    <% end %>
  </select>
  <br>

  <%= label :student, :major1, 'Major: ', :class => 'col-form-label profile-name md-font-size' %>
  <select name='student[major1]' id="Major">
    <% @major_minor_options.each do |major| %>
      <option value="<%= major[:id] %>"><%= major[:name] %></option>
    <% end %>
  </select>
  <br>
  <br/>
  <div class="profile-button d-flex justify-content-center">
    <div class="profile-button">
      <%= submit_tag 'Update Profile', :class => 'btn btn-primary profile-back' %>
    </div>
    <div class="profile-button">
      <%= link_to 'Cancel', profile_path, :class => 'btn btn-secondary profile-edit' %>
    </div>
  </div>
<% end %>

</div>