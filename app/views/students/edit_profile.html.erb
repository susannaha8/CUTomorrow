<h2>Edit Profile</h2>
<h3>Name: <%= @student.id%>
<%= form_tag edit_profile_path, :method => :put do %>
  <%= label :student, :standing, 'Standing', :class => 'col-form-label' %>
  <%= text_field :student, 'standing', :class => 'form-control' %>
  <%= label :student, :major1, 'Major 1', :class => 'col-form-label' %>
  <%= text_field :student, 'major1', :class => 'form-control' %>
  <%= label :student, :major2, 'Major 2', :class => 'col-form-label'  %>
  <%= text_field :student, 'major2', :class => 'form-control' %>
  <%= label :student, :minor1, 'Minor 1', :class => 'col-form-label'  %>
  <%= text_field :student, 'minor1', :class => 'form-control' %>
  <%= label :student, :minor2, 'Minor 2', :class => 'col-form-label'  %>
  <%= text_field :student, 'minor2', :class => 'form-control' %>
  <%= label :student, :minor3, 'Minor 3', :class => 'col-form-label'  %>
  <%= text_field :student, 'minor3', :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Update Profile', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', profile_path, :class => 'btn btn-secondary' %>
<% end %>
